<header id="myborrows-head">
	<a href="/">Home</a>
	<a href="/user/borrows" id="user-menu">Menu</a>
	<a href="/logout" id="user-logout">Logout</a>
	{{#if user.isAdmin}}
		<a href="/admin" id="user-admin">Admin</a>
	{{/if}}
</header>
<h1>My Books</h1>
<div id="userborrows-books">
	{{#each book}}
		<div class="myborrow-books">
			<a href="/books/{{book_id}}">
				<img class="myborrow-img" src="/images/book/{{file.filename}}" />
				<h2>{{title}}</h2>
			</a>
			<p>{{author}}</p>
			<a href="/books/{{book_id}}/borrows/{{_id}}" class="delete-borrow">Return</a>
			<p class="return-book" style="display: none" id="{{_id}}">Thank you for returning the {{title}}</p>
			<p class="borrow-clear"></p>
		</div>
	{{else}}
		<p>There is no book!</p>	
	{{/each}}
</div>