{{#each borrow}}
	<div class="borrow">
		<p class="borrow-title">Book title:</p>
		<p class="bt">{{title}}</p>
		<p class="borrow-user">Username</p>
		<p class="bu">{{user}}</p>
		<p class="borrow-date">Date</p>
		<p class="bd">{{datum date}}</p>
		<a href="/books/{{book_id}}/borrows/{{_id}}" class="borrow-return" id="{{id}}">Return</a>
	</div>
{{/each}}