<header id="home">
	{{#if user}}
		<a href="/logout" class="home-login">Logout</a>
		{{else}}
			<a href="/login" class="home-login">Login</a>
			<a href="/register" id="home-reg">Registration</a>	
	{{/if}}
</header>
<div id="home-books">
	{{#each book}}
		<div class="book-item">
			<div class="img"><img src="/images/book/{{file.filename}}" /></div>
			<a href="/books/{{_id}}"><p>{{title}}</p></a>
			<p>{{author}}</p>
		</div>
	{{/each}}		
</div>